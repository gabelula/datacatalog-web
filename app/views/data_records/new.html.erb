<% content_for :title do %>
  <%=t(:text_add_data_source)%>
<% end %>

<div id="ltColumn">
  <% content_for :body_class do %><%=t(:text_add_data)%><% end %>

  <%= show_flash_message %>

  <% form_for @data_record, :html => { :multipart => true } do |form| %>
    <%= form.error_messages %>
    <%= render "form", :form => form %>
    <ul>
      <li>
        <button class="submit" id="data_suggestion_submit" type="submit" value="Submit" name="commit">
          <span><%=t(:text_submit)%></span>
        </button>
      </li>
    </ul>
  <% end %>
</div>    
