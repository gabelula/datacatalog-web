<% content_for :title do %>
  <%=t(:text_browse)%>
  <% if @filters.tags.present? %>
    <%=t(:text_by_tag)%><%= @filters.tags %>"
  <% end %>
<% end %>

<% if @filters.any? %>
  <% content_for :title_suffix do %>
    <span class="small">(<%= link_to t(:label_view_all), data_records_path %>)</span>
  <% end %>
<% end %>

<% content_for :body_class do %><%=t(:text_browse)%><% end %>

<div id="column_fullWidth">
  <%= render 'filters' %>

  <%= show_flash_message %>

  <% if @data_records.total_pages > 1 %>
    <div class="tableNav">
      <%= will_paginate @data_records %>
    </div>
  <% end %>

  <%= render 'shared/source_table' %>

  <% if @data_records.total_pages > 1 %>
    <div class="tableNav">
      <%= will_paginate @data_records %>
    </div>
  <% end %>
</div>
