<% form_for @filters, :url => data_records_path, :html => { :method => :get, :id => 'filterDataForm' } do |form| %>
  <div id="filterData">
    <ul>
      <li>
        <%= form.label :location %>
        <%= form.select :location, all_locations_for_select("All", "-------------"), :disabled => "-------------" %>
      </li>

      <li>
        <%= form.label :ministry %>
        <%= form.select :ministry, ministries_for_select, :disabled => "-------------" %>
      </li>

      <li>
        <%= form.label :organization %>
        <%= form.select :organization, organizations_for_filtering, :disabled => "-------------" %>
      </li>

      <li>
        <%= form.label :release_year , t(:label_release_year)%>
        <%= form.select :release_year, years_for_select, :disabled => "-------------" %>
      </li>

      <li id="submit">
        <button class="filterBtn" type="submit">
          <span><%=t(:text_filter_data)%></span>
        </button>
      </li>
    </ul>

    <div class="clear"></div>
  </div>
<% end %>
