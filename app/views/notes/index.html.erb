<% content_for :body_class do %><%=t(:text_detail_lgheader)%><% end %>

<% content_for :title do %>
  <%= @data_record.title %><%=t(:text_private_notes)%>
<% end %>

<%= render 'shared/data_record_tabs' %>

<div id="ltColumn">
  <%= show_flash_message %>

  <% @notes.each do |note| %>
    <div class="note_module">
      <h3><%=t(:text_note_from)%><%= note.created_at.to_s(:mdy_slashed) %></h3>
        <%= markdownize note.text %>
    </div>
  <% end %>
</div>

<div id="rtColumnWrapper">
  <div id="rtColumn" class="withBg">
    <%= render 'favorites/sidebar' %>
    <%= render 'notes/form' %>
  </div>
</div>
