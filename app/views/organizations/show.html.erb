<% content_for :body_class do %><%=t(:text_detail_organization)%><% end %>

<% content_for :title do %>
  <%=t(:text_data_from)%><%= @organization.name %><%=t(:text_)%>
<% end %>

<div id="column_fullWidth">
  <div class="org_metaDetails">
    <p><%= @organization.description %></p>
    <div id="dataDetails">
      <div id="metaDetails">
        <dl>
          <%= detail_field @organization,
            :attribute => :org_type,
            :label     => "Type",
            :value     => @organization.org_type,
            :titleize  => true,
            :noclear   => true %>
          <%= detail_field @organization,
            :attribute => :acronym,
            :label     => "Acronym",
            :value     => @organization.acronym,
            :noclear   => true  %>
          <%= detail_field @organization,
            :attribute => :url,
            :label     => "URL",
            :value     => truncate(@organization.url, :length => 45),
            :url       => @organization.url,
            :noclear   => true  %>
          <%= detail_field @organization,
            :attribute => :url,
            :label     => "Home Page",
            :value     => truncate(@organization.homepage_url, :length => 45),
            :url       => @organization.homepage_url,
            :noclear   => true  %>
        </dl>
      </div><!-- metaDetails -->
      <div class="clear"></div>
    </div><!-- dataDetails -->

    <%= will_paginate @data_records %>

    <div class="clear"></div>
  </div>

  <%= show_flash_message %>

  <%= render 'shared/source_table' %>

  <div class="tableNav">
    <%= will_paginate @data_records %>
  </div>
</div>
