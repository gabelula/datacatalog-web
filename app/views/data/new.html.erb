<% content_for :title do %>
  Add Data Source
<% end %>

<div id="ltColumn">
  <% content_for :body_class do %>add_data<% end %>

  <% form_for @source, :url => sources_path, :html => { :method => :post } do |f| %>
  <%= show_flash_message %>

  <% if @errors.present? %>
    <div id="errorExplanation" class="errorExplanation">
      <h2>Uh-oh!</h2>
      <p>There were problems with the following fields:</p>
      <ul>
        <% parse_api_errors(@errors).each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <ul>
    <%= render "form", :form => f %>
    <li>
      <button class="submit" id="data_suggestion_submit" type="submit" value="Submit" name="commit">
        <span>Submit</span>
      </button>
    </li>
  </ul>
  <% end %>
</div>    
