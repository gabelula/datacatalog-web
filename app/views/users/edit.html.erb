<% content_for :body_class do %><%=t(:text_profile)%><% end %>

<% content_for :title do %>
    <%=t(:text_account_settings)%>
<% end %>

<div id="ltColumn">
  <%= show_flash_message %>
  <% form_for @user, :url => profile_path, :html => { :method => :put } do |form| %>
    <%= form.error_messages :header_message => "Uh-oh!", :message => t(:message_the_following_problems_occurred) %>
    <ul>
      <%= render "form", :form => form %>
      <li>
      <button class="update_admin" id="user_submit" type="submit" value="Update" name="commit">
          <span><%=t(:text_update)%></span>
        </button>
      </li>
    </ul>
  <% end %>
</div>

<div id="rtColumn">
</div>
