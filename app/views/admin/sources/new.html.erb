<% content_for :title do %>
  <%=t(:text_new_data_source)%>
<% end %>

<% content_for :body_class do %><%=t(:text_admin)%><% end %>

<% content_for :tabs do %>
  <%= render 'admin/tabs' %>
<% end %>

<div id="ltColumn">

<% form_for :source, @source, :url => admin_sources_path do |f| -%>
  <%= show_flash_message %>
  <ul>
    <%= render 'fields', :object => f %>
    <li>
      <button class="submit" id="user_submit" type="submit" value="Update" name="commit">
        <span><%=t(:text_submit)%></span>
      </button>
    </li>
  </ul>

<% end -%>
</div>

<div id="rtColumnWrapper">
  <div id="rtColumn" class="withBg">
    <div id="dashboardNav" class="module">
      <h3><%=t(:text_stats)%></h3>
      <div class="clear"></div>
    </div>
    <a href="<%= new_admin_source_path %>"><img src="/images/btn_addSource.png" /></a>
  </div>
</div>
<div class="clear"></div>