<% content_for :title do %>
  <%= @organization.name %>
<% end %>

<% content_for :body_class do %><%=t(:text_admin)%><% end %>

<% content_for :tabs do %>
  <%= render 'admin/tabs' %>
<% end %>

<div id="ltColumn">

<% form_for [:admin, @organization] do |f| -%>
  <%= show_flash_message %>
  <ul>
    <%= render 'form', :form => f %>
    <li>
      <button class="update_admin" id="user_submit" type="submit" value="Update" name="commit">
        <span><%=t(:text_update)%></span>
      </button>
    </li>
  </ul>

<% end -%>
</div>

<%= render 'sidebar' %>
